<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".ComediaPeli">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewComedia1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="38dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                android:text="Scary Movie"
                android:textColor="@android:color/white"
                android:textSize="23sp"
                tools:layout_editor_absoluteX="50dp"
                tools:layout_editor_absoluteY="50dp" />

            <ImageView
                android:id="@+id/imageViewComedia1"
                android:layout_width="match_parent"
                android:layout_height="289dp"
                app:srcCompat="@drawable/comedia"
                tools:layout_editor_absoluteX="80dp"
                tools:layout_editor_absoluteY="74dp" />

            <ImageView
                android:id="@+id/imageViewComedia2"
                android:layout_width="146dp"
                android:layout_height="25dp"
                android:layout_marginStart="110dp"
                android:layout_marginLeft="12dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/estrellas"
                tools:layout_editor_absoluteY="310dp" />

            <TextView
                android:id="@+id/textViewComedia2"
                android:layout_width="331dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text=" es una película estadounidense de ciencia ficción y monstruos de 2018, dirigida por Steven S. DeKnight y escrita por DeKnight, Emily Carmichael, Kira Snyder y T.S. Nowlin. Es la secuela de la cinta de Legendary Pictures del 2013 Pacific Rim. La cinta tiene como protagonistas a John Boyega, Scott Eastwood, Cailee Spaeny, Jing Tian y Karan Brar con Rinko Kikuchi, Charlie Day y Burn Gorman regresando a sus papeles de la primera película. Fue estrenada el 23 de marzo 2018 a través de Universal Pictures y Warner Bros. Pictures.  "
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.142"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView11" />

            <Button
                android:id="@+id/buttonComedia1"
                android:layout_width="126dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:background="#910800"
                android:padding="5dp"
                android:paddingTop="25dp"
                android:text="Agregar a Lista"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/imageViewComedia3"
                android:layout_width="wrap_content"
                android:layout_height="181dp"
                android:layout_marginTop="25dp"
                app:srcCompat="@drawable/trailercomedia" />

            <TextView
                android:id="@+id/textViewComedia3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:padding="3dp"
                android:text="Comentarios"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageViewComedia4"
                android:layout_width="wrap_content"
                android:layout_height="394dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                app:srcCompat="@drawable/comentarios" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>