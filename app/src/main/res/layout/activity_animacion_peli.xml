<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".AnimacionPeli">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewAnimacion1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="38dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                android:text="Coco"
                android:textColor="@android:color/white"
                android:textSize="23sp"
                tools:layout_editor_absoluteX="50dp"
                tools:layout_editor_absoluteY="50dp" />

            <ImageView
                android:id="@+id/imageViewAnimacion1"
                android:layout_width="match_parent"
                android:layout_height="289dp"
                app:srcCompat="@drawable/animacion"
                tools:layout_editor_absoluteX="80dp"
                tools:layout_editor_absoluteY="74dp" />

            <ImageView
                android:id="@+id/imageViewAnimacion2"
                android:layout_width="146dp"
                android:layout_height="25dp"
                android:layout_marginStart="110dp"
                android:layout_marginLeft="12dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/estrellas"
                tools:layout_editor_absoluteY="310dp" />

            <TextView
                android:id="@+id/textViewAnimacion2"
                android:layout_width="331dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="Miguel es un niño que sueña con ser músico, pero su familia se lo prohíbe porque su tatarabuelo, músico, los abandonó, y quieren obligar a Miguel a ser zapatero, como todos los miembros de la familia. Por accidente, Miguel entra en la Tierra de los Muertos, de donde sólo podrá salir si un familiar difunto le concede su bendición, pero su tatarabuela se niega a dejarlo volver con los vivos si no promete que no será músico. Debido a eso, Miguel escapa de ella y empieza a buscar a su tatarabuelo."                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.142"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView11" />

            <Button
                android:id="@+id/buttonAnimacion1"
                android:layout_width="126dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:background="#910800"
                android:padding="5dp"
                android:paddingTop="25dp"
                android:text="Agregar a Lista"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/imageViewAnimacion3"
                android:layout_width="wrap_content"
                android:layout_height="181dp"
                android:layout_marginTop="25dp"
                app:srcCompat="@drawable/traileranimacion" />

            <TextView
                android:id="@+id/textViewAnimacion3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:padding="3dp"
                android:text="Comentarios"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageViewAnimacion4"
                android:layout_width="wrap_content"
                android:layout_height="394dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                app:srcCompat="@drawable/comentarios" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>