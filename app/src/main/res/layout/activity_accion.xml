<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".Accion">


    <ScrollView
        android:layout_width="368dp"
        android:layout_height="495dp"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="38dp"
                android:text="Pacific Rim Uprising"
                android:textColor="@android:color/white"
                android:textSize="23sp"
                tools:layout_editor_absoluteX="31dp"
                tools:layout_editor_absoluteY="52dp" />

            <ImageView
                android:id="@+id/imageView30"
                android:layout_width="match_parent"
                android:layout_height="289dp"
                app:srcCompat="@drawable/accion"
                tools:layout_editor_absoluteX="212dp"
                tools:layout_editor_absoluteY="161dp" />

            <ImageView
                android:id="@+id/imageView31"
                android:layout_width="146dp"
                android:layout_height="25dp"
                android:layout_marginStart="110dp"
                android:layout_marginLeft="12dp"
                android:layout_marginEnd="8dp"
                app:srcCompat="@drawable/estrellas"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="343dp" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="168dp"
                android:layout_marginStart="15dp"
                android:layout_marginRight="10dp"
                android:text=" es una película estadounidense de ciencia ficción y monstruos de 2018, dirigida por Steven S. DeKnight y escrita por DeKnight, Emily Carmichael, Kira Snyder y T.S. Nowlin. Es la secuela de la cinta de Legendary Pictures del 2013 Pacific Rim. La cinta tiene como protagonistas a John Boyega, Scott Eastwood, Cailee Spaeny, Jing Tian y Karan Brar con Rinko Kikuchi, Charlie Day y Burn Gorman regresando a sus papeles de la primera película. Fue estrenada el 23 de marzo 2018 a través de Universal Pictures y Warner Bros. Pictures.  "
                android:textColor="@android:color/white"
                tools:layout_editor_absoluteX="59dp"
                tools:layout_editor_absoluteY="462dp" />

            <Button
                android:id="@+id/accionboton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:background="#910800"
                android:padding="5dp"
                android:paddingTop="25dp"
                android:text="Agregar Lista" />

            <ImageView
                android:id="@+id/imageView32"
                android:layout_width="match_parent"
                android:layout_height="181dp"
                android:layout_marginTop="25dp"
                app:srcCompat="@drawable/traileraccion" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="Comentarios"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView33"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                app:srcCompat="@drawable/comentarios" />
        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>